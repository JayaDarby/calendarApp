<% include ../partials/headerUser %>
<div class='container' id='container'>
<h1 id='white'>Sign up</h1>
<form method="POST" action="/signup" class="form-signin">
  <div class="form-group">
    <label for="user" class="sr-only white">Email:    </label>
      <input type="text" id="email" name="user[email]" class="form-control" required autofocus>

  </div>
  <div class="form-group">
    <label class="sr-only white"> Password: </label>
      <input type="password" id="pass" name="user[password]" class="form-control" required>
  </div>
  <div class="form-group">
    <input type="submit" value="Sign up" class="btn btn-med btn-primary btn-block">
  </div>
</form>
<a href="/login">Already have an account? Login in here</a>
</div>
