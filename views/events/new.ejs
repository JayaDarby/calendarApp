<% include ../partials/header %>
<h1>Add a New Event</h1>


<form action="/events" method="POST">
  <div class="form-group">
    <label for="title" class='label'>Name of Event: </label>
    <input type="text" class="form-control" name="event[title]" id="title" autofocus>
  </div>
  <div class="form-group">
    <label for="allDay">Is this event all day? </label><br>
    <input type="radio" class="form-control" name="event[allDay]" id="allDay" value='No'>No<br>
    <input type="radio" class="form-control" name="event[allDay]" id="allDay2" value='Yes'>Yes<br>
  </div>
    <div class="form-group">
    <label for="startDate" class='label'>Start: </label>
    <input type="datetime-local" class="form-control" name="event[start]" id="startDate">
   <div class="form-group">
    <label for="endTime">End: </label>
    <input type="datetime-local" class="form-control" name="event[end]" id="endTime">
  </div>
  <div class="form-group">
    <label for="url">Event URL: </label>
    <input type="url" class="form-control" name="event[url]" id="url">
  </div>
  <div class="form-group">
    <label for="description">Description: </label><br>
    <textarea rows="4" cols="50" class="form-control" name="event[description]" id="description"></textarea>
  </div>
    <div class='label'> indicates a required field</div>
  <input type="hidden" name="event[user]" id="author" value="<%= author_id %>">
  <input type="submit" value="Add" class="btn btn-lg btn-success">
</form>
<br>
<a href="/calendar">To Calendar</a><br>
<a href="/events">To Events List</a><br>

