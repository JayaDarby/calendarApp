<% include ../partials/header %>
<h1>Add a New Event</h1>

<form action="/events/<%= event._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="title">Name of Event: </label>
    <input type="text" class="form-control" name="event[title]" id="title" value='<%=event.title %>' autofocus>
  </div>
  <div class="form-group">
    <label for="allDay">Is this event all day? </label><br>
    <input type="radio" class="form-control" name="event[allDay]" id="allDay" value='<%=event.allDay %>'>No<br>
    <input type="radio" class="form-control" name="event[allDay]" id="allDay2" value='<%=event.allDay %>'>Yes<br>
  </div>
    <div class="form-group">
    <label for="startDate">Start: </label>
    <input type="datetime-local" class="form-control" name="event[start]" id="startDate" value='<%=event.start %>'>
   <div class="form-group">
    <label for="endTime">End: </label>
    <input type="datetime-local" class="form-control" name="event[end]" id="endTime" value='<%=event.end %>'>
  </div>
  <div class="form-group">
    <label for="url">Event URL: </label>
    <input type="url" class="form-control" name="event[url]" id="url" value='<%=event.url %>'>
  </div>
  <input type="hidden" name="event[user]" id="author" value="<%= author_id %>">
  <input type="submit" value="Add" class="btn btn-lg btn-success">
</form>

<% include ../partials/footer %>