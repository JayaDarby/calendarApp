<% include ../partials/header %>
<h1>Your Events</h1>

<a href="/events/new">Add a New Event</a>

<table>
	<thead>
		<tr>
			<th>Name of Event</th>
			<th>All Day?</th>
		    <th>Starting Time</th>
		    <th>Ending Time</th>
		    <th>Event Link</th>
		    <th>Edit</th>
		    <th>Delete</th>
		</tr>
	</thead>
 	 <tbody>
 	   <% theEvents.forEach(function(event){ %>
 	     <tr>
 	     	<td><a href="/events/<%= event._id%>"><%= event.title%></a></td>
 	     	<td><%= event.allDay%></td>
 	     	<td><%= event.start%></td>
 	     	<td><%= event.end%></td>
 	     	<td><a href='<%= event.url%>'><%= event.url%></a></td>
 	     	<td><a href="/events/<%= event._id%>/edit">Edit</a></td>
 	     	<td>
 	     	  <form action='/events/<%= event._id %>?_method=DELETE' method="POST">
 	     	    <input type="submit" value="X">
 	     	  </form>
 	     	</td>
 	     </tr>
 	   <% })%>
 	 </tbody>

<% include ../partials/footer %>
<br>
<a href="/logout">Logout</a>